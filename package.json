{
  "name": "elysius",
  "version": "1.4.0",
  "description": "Find files and directories by traversing",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.15.3",
  "license": "MIT",
  "homepage": "https://github.com/luxass/elysius",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/elysius.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/elysius/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./find": {
      "import": {
        "types": "./dist/find.d.ts",
        "default": "./dist/find.mjs"
      },
      "require": {
        "types": "./dist/find.d.cts",
        "default": "./dist/find.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.14.0",
    "@types/node": "^20.14.9",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
