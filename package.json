{
  "name": "elysius",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@8.10.5",
  "description": "Find files and directories by traversing",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/luxass/elysius",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/elysius"
  },
  "bugs": {
    "url": "https://github.com/luxass/elysius/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.0.0-beta.4",
    "@types/node": "^20.9.2",
    "eslint": "^8.54.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  }
}
